{
  "lerna": "2.11.0",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/tests/**", "**/*.md"],
  "publishConfig": {
    "access": "public"
  }
}
